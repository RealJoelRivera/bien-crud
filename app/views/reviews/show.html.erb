<% content_for :page_title, @review.title %>

<h2><%= @review.title%></h2>

<div class="body"><%= simple_format @review.body%></div>

<div class="rating"><%= @review.rating%> / 10 </div>

<% if @review.ambiance.present? %>
  <div class="ambiance"> Ambiance: <%= @review.ambiance %> </>
<% end %>

<% if @review.cuisine.present? %>
  <div class="cuisine"> Cuisine: <%= @review.cuisine %> </>
<% end %>

<% if @review.price.present? %>
  <div class="price"> Price: <%= @review.price %> </>
<% end %>

<div class="action">
<%= link_to "Edit this review", edit_review_path(@review) %>
<%= link_to "Delete this review", review_path(@review), method: :destroy, data: {confirm: "Are you sure you want to delete this review?"} %>
</div>

<h3>Comments</h3>

<% @review.comments.order("created_at desc").each do |comment|%>
  <%= simple_format comment.body %>

  <p class="posted">Posted <%= time_ago_in_words comment.created_at %> ago</p>
<% end %>

<h3>Add a comment</h3>

<%= simple_form_for [@review, Comment.new] do |f| %>
  <%= f.input :body %>
  <%= f.button :submit, "Add Comment" %>
<% end %>